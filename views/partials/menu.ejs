<!-- Menu created from sample : https://s.bootsnipp.com/iframe/Q0dAX# -->
<a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
	<i class="fas fa-bars"></i>
</a>
<nav id="sidebar" class="sidebar-wrapper">
	<div class="sidebar-content">
		<span class="badge badge-pill badge-danger">Alpha</span>
		<div class="sidebar-brand">
			<a href="#">TESLA VIDEO ANALYZER</a>
			<div id="close-sidebar">
				<i class="fas fa-times"></i>
			</div>
		</div>
		<div class="sidebar-header">
			<div class="user-pic">
				<img
					class="img-responsive"
					src="../../images/tesla.png"
					alt="User picture"
				/>
			</div>
			<div class="user-info">
				<span class="user-name"><strong>Summer</strong> </span>
				<!-- <span class="user-role">Administrator</span> -->
				<span class="user-status">
					<i class="fa fa-circle"></i>
					<span>Online</span>
				</span>
			</div>
		</div>
		<!-- <div class="sidebar-menu">
			<ul>
				<li class="header-menu">
					<span data-feather="activity" class="feather-header"></span>
					<span><a class="link-header" href="/">Reports</a></span>
				</li>
			</ul>
		</div> -->
		<% Object.keys(menuItems).forEach(function(menuItemKey) { %>
		<div class="sidebar-menu">
			<ul>
				<li class="header-menu">
					<span
						data-feather="<%= menuItems[menuItemKey].menuIcon %>"
						class="feather-header"
					></span>
					<span><%= menuItems[menuItemKey].menuTitle %></span>
				</li>
				<%
				Object.keys(menuItems[menuItemKey].items).forEach(function(dateEvent){
				%> <% let eventDay = new
				Date(menuItems[menuItemKey].items[dateEvent].time).toLocaleDateString();
				let eventCount = menuItems[menuItemKey].items[dateEvent].events.length;
				%>
				<li class="sidebar-dropdown">
					<a href="#" id="<%= eventDay %>">
						<i class="fa fa-calendar-alt"></i>
						<span>
							<%= eventDay %>
						</span>
						<span class="badge badge-pill badge-warning notification">
							<%= eventCount %>
						</span>
					</a>
					<div class="sidebar-submenu">
						<ul>
							<%
							menuItems[menuItemKey].items[dateEvent].events.forEach(function(event){
							%>
							<li>
								<a
									id="<%= event.folderName %>"
									href="/event?cliptype=<%= menuItems[menuItemKey].folderName %>&clipday=<%= eventDay %>&clipfolder=<%= event.folderName %>"
								>
									<%=new Date(event.time).toLocaleTimeString() %>
								</a>
							</li>
							<% }); %>
						</ul>
					</div>
				</li>
				<% }); %>
			</ul>
		</div>
		<% });%>
		<!-- sidebar-menu  -->
	</div>
</nav>
